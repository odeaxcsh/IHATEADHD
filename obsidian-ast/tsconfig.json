{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "allowJs": false,
    "jsx": "react",
    "strict": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./types"]
  },
  "include": ["src"]
}
